rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Fetch Jobs Collection
    // - Read: Authenticated users
    // - Write: Only backend (via Firebase Functions)
    match /fetch_jobs/{jobId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend writes via Firebase Functions
      
      // Allow users to update status for approval (if needed)
      // Uncomment if you want users to approve via frontend:
      // allow update: if isAuthenticated() && 
      //                  request.resource.data.diff(request.resource.data) == ['status'] &&
      //                  request.resource.data.status == 'PUBLISHED';
    }
    
    // University Programs Collection
    // - Read: Public (for your application)
    // - Write: Only backend
    match /university_programs/{programId} {
      allow read: if true; // Public read access
      allow write: if false; // Only backend writes
    }
    
    // Program Versions Collection
    // - Read: Authenticated users (for audit/history)
    // - Write: Only backend
    match /program_versions/{versionId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend writes
    }
    
    // Audit Logs Collection
    // - Read: Admins only
    // - Write: Only backend
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Only backend writes
    }
    
    // Diff Results Collection
    // - Read: Authenticated users (for review)
    // - Write: Only backend
    match /diff_results/{diffId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend writes
    }
    
    // Users Collection (for role management)
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAdmin() || (isAuthenticated() && request.auth.uid == userId);
    }
  }
}


